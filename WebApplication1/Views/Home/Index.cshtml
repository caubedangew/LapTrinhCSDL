@{
    ViewBag.Title = "Trang chủ";
}


<div class="" style="padding:60px 0 0 0;">
    <img src="/static/image/1.png" alt="Chicago" class="d-block w-100">
</div>
<div style="width:100%" class="d-flex justify-content-center ">
    <div style="text-align:center;width:300px;font-size:30px;border-radius:40px;" class=" text-white hover">BUY NOW!</div>
</div>
<div class="mt-5" style="width:100%; padding:60px 0 0 0;">
    <img src="/static/image/2.png" alt="Chicago" class="d-block w-100">
</div>
<div style="width:100%" class="d-flex justify-content-center">
    <div class="zoom" style="width:80%">
        <img src="/static/image/3.png" alt="Chicago" class="d-block w-100">
    </div>
</div>
<div style="width:100%" class="d-flex justify-content-center ">
    <div style="text-align:center;width:800px;font-size:30px; color:#3D5B7D;font-weight:700;">OPEN CAMERA - OPEN FUTURE</div>
</div>


<!-- Carousel -->
<div id="demo" class="carousel slide" data-bs-ride="carousel" style="padding:60px 0 0 0;">

    <!-- Indicators/dots -->
    <div class="carousel-indicators">
        <button type="button" data-bs-target="#demo" data-bs-slide-to="0" class="active" style="background-color: #ffe7e8; height: 8px;"></button>
        <button type="button" data-bs-target="#demo" data-bs-slide-to="1" style="background-color: #374a37;height:8px;"></button>
        <button type="button" data-bs-target="#demo" data-bs-slide-to="2" style="background-color: #afd7f5; height: 8px; "></button>
        <button type="button" data-bs-target="#demo" data-bs-slide-to="3" style="background-color: #b6b1a8; height: 8px; "></button>
    </div>

    <!-- The slideshow/carousel -->
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="static/image/p1.png" alt="Iphone" class="d-block w-100">
        </div>
        <div class="carousel-item">
            <img src="static/image/p2.png" alt="Phone" class="d-block w-100">
        </div>
        <div class="carousel-item">
            <img src="static/image/p3.png" alt="phone" class="d-block w-100">
        </div>
        <div class="carousel-item">
            <img src="static/image/p4.png" alt="phone" class="d-block w-100">
        </div>
    </div>

    <!-- Left and right controls/icons -->
    <button class="carousel-control-prev" type="button" data-bs-target="#demo" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" style="background-color:black;"></span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#demo" data-bs-slide="next">
        <span class="carousel-control-next-icon" style="background-color:black;"></span>
    </button>
</div>