<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - CellBuddy</title>
    @Scripts.Render("/bundles/modernizr")
    @Styles.Render("~/Content/css")
    <link rel="icon" type="image/x-icon" href="/static/image/logo.png">
    @Styles.Render("~/static/css/font.css")
    @Styles.Render("~/static/css/animate.css")
    @Styles.Render("~/static/css/color.css")
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" rel="stylesheet" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Teachers:ital,wght@0,400..800;1,400..800&display=swap" rel="stylesheet">
</head>
<body>
    <header>
        <div style="position:fixed;width:100%;z-index:1000;top:0">
            <nav class="navbar navbar-expand-sm bg-dark navbar-dark " style="padding:2px 0">
                <div class="ro" style="color:white;text-align:center;width:100%;font-size:13px;opacity:0.8;">
                    <marquee style="font-size: 13px;">
                        Pay now and get 10%
                        discount for invoices over 500$
                        &emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;
                        &emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;
                        Thanh toán ngay và được giảm giá 10% cho hóa đơn trên 10.000.000 VNĐ
                    </marquee>
                </div>
            </nav>
            <nav class="navbar navbar-expand-sm bg-dark navbar-dark maugra" style="padding:0;opacity:0.8;">
                <div class="p-1 d-flex justify-content-around container-fluid">
                    <div class="zoom">
                        <a class="navbar-brand " href="/Home"><img src="/static/image/logo.png" width="30px"></a>
                        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                    </div>
                    <div class="d-flex justify-content-center menu">
                        <div style="width:60px; text-align:center;" class="mx-4">
                            <div class="chon1"><a href="/Home/" style="text-decoration: none; color: #2f4e73;">Home </a></div>
                        </div>
                        <div style="width: 60px; text-align: center; " class="mx-4">
                            <div><a href="/Products" style="text-decoration: none; color: #2f4e73;">Products</a></div>
                        </div>
                        <div style="width: 60px; text-align: center;" class="mx-4">
                            <div class=""><a href="/Home/" style="text-decoration: none; color: #2f4e73;">Gallery</a></div>
                        </div>
                        <div style="width: 40px; text-align: center; " class="mx-4">
                            <div><a href="/Home/" style="text-decoration: none; color: #2f4e73;">Blog</a></div>
                        </div>
                        <div style="width: 60px; text-align: center; " class="mx-4">
                            <div><a href="/Home/" style="text-decoration: none; color: #2f4e73;">Support</a></div>
                        </div>
                    </div>
                    <div class="d-flex justify-content-center align-items-center ">
                        @{
                            Html.RenderPartial("_CartPartial");
                        }

                        <form class="d-flex">
                            <input class="form-control mx-2" style="border-radius:15px; height:28px;" type="text"
                                   placeholder="Search" id="key">
                        </form>

                        <div class="dropdown">
                            <button data-mdb-button-init data-mdb-ripple-init data-mdb-dropdown-init class="btn "
                                    type="button"
                                    id="dropdownMenuButton"
                                    data-mdb-toggle="dropdown"
                                    aria-expanded="false">
                                <img src="/static/image/info.png" width="22px">
                            </button>
                            <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                @if (String.IsNullOrEmpty(User.Identity.Name))
                                {
                                    <li><a class="dropdown-item" href="/Users/SignIn">Sign in</a></li>
                                    <li><a class="dropdown-item" href="/Users/SignUp">Sign up</a></li>
                                }
                                else
                                {
                                    <li><a class="dropdown-item" href="/Users/Details">Account</a></li>
                                    <li><a class="dropdown-item" href="@Url.Action("SignOut", "Users")">Sign out</a></li>
                                }
                            </ul>
                        </div>
                    </div>

                </div>
            </nav>
        </div>
    </header>

    <div class="container-fluid body-content" style="bottom:0;">
        @RenderBody()
    </div>

    <footer>
        <div style="padding:60px 0 0 0;">
            <hr />
            <div class="row">
                <div class="col-sm-1 p-3 "></div>
                <div class="col-sm-5 p-3 ">
                    <div></div>
                    <div>Purchase policy</div>
                    <div>Recruitment</div>
                    <div>Submit complaints</div>
                    <div>
                        <i class="fa-brands fa-facebook" style="margin:4px;"></i> <i class="fa-brands fa-instagram" style="margin:4px" ;></i>
                        <i class="fa-brands fa-twitter" style="margin:4px" ;></i><i class="fa-brands fa-telegram" style="margin:6px;"></i>
                    </div>
                </div>
                <div class="col-sm-1 p-3  "></div>
                <div class="col-sm-5 p-3 ">
                    <div style="font-weight:500">Support Hotline:</div>
                    <div>Call to buy:  098 98 98 981 (24/7)</div>
                    <div>Call complaint: 0123 123 123 4 (7:00 - 20:00)</div>
                    <div>Call for warranty: 0123 123 333 (7:00 - 20:00)</div>
                </div>
            </div>
        </div>
        <div class=" mt-4 text-white maugra1 ">
            <p class="py-3" style="text-align:center;">Copyright © 2024  Buddy Inc. All rights reserved.</p>
        </div>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
